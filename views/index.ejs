    <script>
        // --- FEATURE SLIDERS LOGIC ---
        const sliders = {};

        function initSliders() {
            ['slider-gamification', 'slider-analytics', 'slider-habits','slider-streak' ].forEach(id => {
                const el = document.getElementById(id);
                if(el) {
                    sliders[id] = { 
                        current: 0, 
                        total: el.querySelectorAll('.slider-slide').length,
                        track: el.querySelector('.slider-slides')
                    };
                }
            });
        }

        function moveSlide(id, dir) {
            const s = sliders[id];
            if (!s) return;
            s.current = (s.current + dir + s.total) % s.total;
            s.track.style.transform = `translateX(-${s.current * 100}%)`;
        }

        // --- MOBILE CAROUSEL LOGIC ---
        let mobileIdx = 0;
        const mobileTotal = 7; // m0 to m6
        const mobileTrack = document.getElementById('mobileTrack');
        const dotsContainer = document.getElementById('mobileDots');

        function initMobile() {
            // Create dots
            for(let i=0; i<mobileTotal; i++) {
                const dot = document.createElement('div');
                dot.className = `dot ${i===0 ? 'active' : ''}`;
                dot.onclick = () => setMobile(i);
                dotsContainer.appendChild(dot);
            }

            // --- NEW CODE: ADD SWIPE FUNCTIONALITY ---
            let touchStartX = 0;
            let touchEndX = 0;
            
            // Listen for touch start
            mobileTrack.addEventListener('touchstart', e => {
                touchStartX = e.changedTouches[0].screenX;
            }, {passive: true});

            // Listen for touch end
            mobileTrack.addEventListener('touchend', e => {
                touchEndX = e.changedTouches[0].screenX;
                handleSwipe();
            }, {passive: true});

            // Calculate swipe direction
            function handleSwipe() {
                // Swipe Left (Next Slide)
                if (touchEndX < touchStartX - 50) moveMobile(1); 
                // Swipe Right (Previous Slide)
                if (touchEndX > touchStartX + 50) moveMobile(-1); 
            }
        }

        function moveMobile(dir) {
            setMobile((mobileIdx + dir + mobileTotal) % mobileTotal);
        }

        function setMobile(idx) {
            mobileIdx = idx;
            mobileTrack.style.transform = `translateX(-${mobileIdx * 100}%)`;
            // Update dots
            Array.from(dotsContainer.children).forEach((d, i) => {
                d.classList.toggle('active', i === mobileIdx);
            });
        }

        // --- INIT ---
        document.addEventListener('DOMContentLoaded', () => {
            initSliders();
            initMobile();
        });
    </script>
